<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd
                http://code.alibabatech.com/schema/dubbo
                http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="shiro-model"/>

    <!--注册中心-->
    <dubbo:registry protocol="zookeeper" address="${zookeeper}"/>

    <dubbo:protocol name="dubbo" port="40880" threads="300" serialization="java" />

    <dubbo:provider delay="-1" timeout="5000" retries="1"/>

    <dubbo:consumer timeout="60000" check="false" />
    <!-- 声明需要暴露的服务接口 -->
    <!--<dubbo:service interface="com.dtdream.pubtrans.backend.service.ITrafficService" ref="trafficService"/>-->

    <!-- 扫描注解包路径，多个包用逗号分隔，不填pacakge表示扫描当前ApplicationContext中所有的类 -->
    <!--<dubbo:annotation package="com.dtdream.pubtrans.backend.provider" />-->
    <dubbo:annotation package="com.cmx.shiroservice" />

    <dubbo:reference id="systemUserService" interface="com.cmx.shiroapi.service.SystemUserService" retries="0" timeout="30000" check="false" version = "1.0.0" />
    <dubbo:reference id="systemRoleService" interface="com.cmx.shiroapi.service.SystemRoleService" retries="0" timeout="30000" check="false" version="1.0.0" />
    <dubbo:reference id="systemMenuService" interface="com.cmx.shiroapi.service.SystemMenuService" retries="0" timeout="30000" check="false" version="1.0.0" />
    <dubbo:reference id="permissionService" interface="com.cmx.shiroapi.service.PermissionService" retries="0" timeout="30000" check="false" version="1.0.0" />
</beans>